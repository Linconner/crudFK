<!DOCTYPE html>
<html lang="pt-BR">
<head>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cal+Sans&family=Hammersmith+One&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/tabelas.css">
    <link rel="stylesheet" href="/footer.css">
    <link rel="stylesheet" href="/index.css">
    
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Cursos</h1>
        
        <a href="/cursos/add" class="btn btn-success mb-3">Adicionar Curso</a>
        
        <% if (cursos.length > 0) { %>
            <table class="table table-striped table-hover align-middle border shadow-sm">
                <thead class="thead-green">
                    <tr class="bg-success text-white">
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Carga Horária</th>
                        <th>Alunos Matriculados</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% cursos.forEach(curso => { %>
                        <tr>
                            <td><%= curso.id %></td>
                            <td><%= curso.nome %></td>
                            <td><%= curso.carga_horaria %> horas</td>
                            <td><%= curso.Alunos ? curso.Alunos.length : 0 %></td>
                            <td>
                                <a href="/cursos/<%= curso.id %>" class="btn btn-outline-info btn-sm">Detalhes</a>
                                <a href="/cursos/edit/<%= curso.id %>" class="btn btn-outline-primary btn-sm">Editar</a>
                                <form action="/cursos/delete/<%= curso.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Tem certeza?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info">Nenhum curso cadastrado.</div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>