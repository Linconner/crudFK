<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <link rel="stylesheet" href="../public/tabelas.css">
    <link rel="stylesheet" href="../public/footer.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Alunos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Alunos</h1>
        
        <a href="/alunos/add" class="btn btn-success mb-3">Adicionar Aluno</a>
        
        <% if (alunos.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr class="bg-success text-white">
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Idade</th>
                        <th>Cursos Inscritos</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% alunos.forEach(aluno => { %>
                        <tr>
                            <td><%= aluno.id %></td>
                            <td><%= aluno.nome %></td>
                            <td><%= aluno.email %></td>
                            <td><%= aluno.idade %></td>
                            <td><%= aluno.Cursos ? aluno.Cursos.length : 0 %></td>
                            <td>
                                <a href="/alunos/<%= aluno.id %>" class="btn btn-info btn-sm">Detalhes</a>
                                <a href="/alunos/edit/<%= aluno.id %>" class="btn btn-warning btn-sm">Editar</a>
                                <form action="/alunos/delete/<%= aluno.id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info">Nenhum aluno cadastrado.</div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>